.jBoardMain {
  padding: 22px 22px 28px;
  color: #0f172a;
  font-family: ui-sans-serif, system-ui, -apple-system, "Segoe UI", "PingFang TC", "Noto Sans TC", "Microsoft JhengHei", sans-serif;
}

.jTopSpan {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 16px;
  margin-bottom: 10px;
}

.jTitle {
  font-size: 18px;
  font-weight: 800;
  letter-spacing: 0.2px;
}

.jTabs {
  display: flex;
  gap: 8px;
}

.jTab {
  border: 1px solid rgba(0, 0, 0, 0.08);
  background: #fff;
  border-radius: 999px;
  padding: 6px 10px;
  font-size: 12px;
  cursor: pointer;
}

.jTab.isActive {
  background: rgba(59, 130, 246, 0.12);
  border-color: rgba(59, 130, 246, 0.25);
}

.journalDivider {
  width: 100%;
  height: 1px;
  background: rgba(0, 0, 0, 0.06);
  margin: 12px 0 20px;
}

.jCardsRow {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
  gap: 16px;
  align-items: start;
}

.jCard {
  border: 1px solid rgba(0, 0, 0, 0.06);
  background: #fff;
  border-radius: 16px;
  overflow: hidden;
  text-align: left;
  padding: 0;
  cursor: pointer;
  transition: transform 0.16s ease, box-shadow 0.16s ease;
}

.jCard:hover {
  transform: translateY(-6px);
  box-shadow: 0 12px 28px rgba(15, 23, 42, 0.12);
}

.jCover {
  width: 100%;
  height: 140px;
  background: linear-gradient(135deg, rgba(15, 23, 42, 0.06), rgba(15, 23, 42, 0.03));
  pointer-events: none;
}

.jCoverImg {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
  pointer-events: none;
}

.jCoverPlaceholder {
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, rgba(15, 23, 42, 0.06), rgba(15, 23, 42, 0.03));
  pointer-events: none;
}

.jCardBody {
  padding: 10px 12px 12px;
}

.jSymbol {
  font-weight: 800;
  font-size: 13px;
}

.jMetaLine {
  margin-top: 6px;
  font-size: 12px;
  opacity: 0.65;
  display: flex;
  gap: 6px;
  align-items: center;
}

.jDot {
  opacity: 0.6;
}

.jCardAdd {
  border: 1px dashed rgba(59, 130, 246, 0.25);
  background: rgba(59, 130, 246, 0.06);
  border-radius: 16px;
  min-height: 170px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 8px;
  cursor: pointer;
}

.jAddIcon {
  width: 32px;
  height: 32px;
  border-radius: 999px;
  border: 1px solid rgba(0, 0, 0, 0.08);
  background: #fff;
  display: grid;
  place-items: center;
  font-weight: 800;
}

.jAddText {
  font-size: 12px;
  font-weight: 700;
}

.jHistory {
  margin-top: 18px;
}

.jHistoryTitle {
  font-size: 13px;
  font-weight: 600;
  color: #64748b;
  margin-bottom: 10px;
}

.jHistoryBox {
  padding-top: 14px;
  border-top: 1px solid rgba(15, 23, 42, 0.08);
}

.jHistoryEmpty {
  padding: 12px;
  border-radius: 12px;
  border: 1px dashed rgba(15, 23, 42, 0.12);
  background: rgba(15, 23, 42, 0.02);
  color: rgba(15, 23, 42, 0.55);
  font-size: 12px;
}

.jHistoryGrid {
  margin-top: 10px;
}

@media (max-width: 900px) {
  .jCardsRow {
    grid-template-columns: repeat(2, minmax(0, 1fr));
  }
}

@media (max-width: 640px) {
  .jCardsRow {
    grid-template-columns: 1fr;
  }
}
